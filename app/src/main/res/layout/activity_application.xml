<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:elevation="4dp"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="填写领养申请"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/shape_title_indicator"
                        android:drawablePadding="8dp"
                        android:text="个人信息"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_apply_name"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/shape_card_bg"
                        android:hint="请输入真实姓名"
                        android:paddingHorizontal="12dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_apply_age"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_card_bg"
                        android:hint="请输入年龄"
                        android:inputType="number"
                        android:paddingHorizontal="12dp"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:id="@+id/rg_apply_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#FFD90E"
                            android:checked="true"
                            android:text="男" />

                        <RadioButton
                            android:id="@+id/rb_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:buttonTint="#FFD90E"
                            android:text="女" />
                    </RadioGroup>

                    <EditText
                        android:id="@+id/et_apply_idcard"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_card_bg"
                        android:hint="身份证号"
                        android:paddingHorizontal="12dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_apply_phone"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_card_bg"
                        android:hint="联系方式"
                        android:inputType="phone"
                        android:paddingHorizontal="12dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/shape_title_indicator"
                        android:drawablePadding="8dp"
                        android:text="资质证明"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="居住证明"
                        android:textColor="#666"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/btn_add_live_pic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#FDF3AC"
                        android:text="+ 上传居住证明"
                        android:textColor="#886600"
                        app:cornerRadius="8dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_live_pics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:minHeight="80dp" />

                    <EditText
                        android:id="@+id/et_apply_address"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_card_bg"
                        android:hint="详细居住地址"
                        android:paddingHorizontal="12dp"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="16dp"
                        android:background="#EEEEEE" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="经济能力"
                        android:textColor="#666"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/btn_add_income_pic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#FDF3AC"
                        android:text="+ 上传收入证明"
                        android:textColor="#886600"
                        app:cornerRadius="8dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_income_pics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:minHeight="80dp" />

                    <EditText
                        android:id="@+id/et_income_source"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_card_bg"
                        android:hint="经济来源（如：自由职业）"
                        android:paddingHorizontal="12dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/shape_title_indicator"
                        android:drawablePadding="8dp"
                        android:text="领养意向"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_apply_intent"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/shape_card_bg"
                        android:gravity="top"
                        android:hint="请详细说明您的领养理由..."
                        android:padding="12dp"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/cb_promise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:buttonTint="#FFD90E"
                        android:text="我承诺提供的信息真实有效"
                        android:textSize="13sp" />

                    <CheckBox
                        android:id="@+id/cb_request"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FFD90E"
                        android:text="我承诺遵守所有领养要求"
                        android:textSize="13sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_submit_final"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginVertical="24dp"
                android:backgroundTint="#FFD90E"
                android:text="提交领养申请"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:elevation="4dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>