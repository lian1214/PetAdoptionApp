<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/primary_color"
            android:padding="25dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_avatar_container"
                android:layout_width="86dp"
                android:layout_height="86dp"
                app:cardBackgroundColor="@color/secondary_color1"
                app:cardCornerRadius="43dp"
                app:cardElevation="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/iv_mine_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/tab_icon1_2" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/cv_avatar_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cv_avatar_container"
                app:layout_constraintTop_toTopOf="@+id/cv_avatar_container">

                <TextView
                    android:id="@+id/tv_mine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:textColor="#222222"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_mine_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="让每个毛孩子都有家"
                    android:textColor="#664400"
                    android:textSize="13sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="-30dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <include layout="@layout/item_mine_menu_styled" android:id="@+id/ll_my_publish" />
                <include layout="@layout/item_mine_menu_styled" android:id="@+id/ll_my_apply" />
                <include layout="@layout/item_mine_menu_styled" android:id="@+id/ll_my_favorite" />
                <include layout="@layout/item_mine_menu_styled" android:id="@+id/ll_my_checkin" />
                <include layout="@layout/item_mine_menu_styled" android:id="@+id/ll_settings" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ll_logout"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_margin="32dp"
            android:text="退出登录"
            android:textColor="#FF5252"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="#FFF0F0"
            app:cornerRadius="27dp"
            app:elevation="0dp"
            app:strokeColor="#FFCDD2"
            app:strokeWidth="1dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>